<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordNewBatch">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/menu_toolbar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record New Vaccine Batch"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <!-- dropdown a list of vaccines -->
        <Spinner
            android:id="@+id/spinner_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="160dp"/>

        <!-- vaccine details table -->
        <TableLayout
            android:id="@+id/table_layout_vaccine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <!-- table label -->
            <TableRow>

                <TextView
                    android:layout_margin="10dp"
                    android:text="Vaccine ID" />

                <TextView
                    android:layout_margin="10dp"
                    android:text="Vaccine Name" />

                <TextView
                    android:layout_margin="10dp"
                    android:text="Manufacturer" />
            </TableRow>

            <!-- details -->
            <TableRow>

                <TextView
                    android:id="@+id/batch_vaccineID"
                    android:layout_margin="10dp"
                    android:text="V110" />

                <TextView
                    android:id="@+id/batch_vaccineName"
                    android:layout_margin="10dp"
                    android:text="Pfizer" />

                <TextView
                    android:id="@+id/batch_vaccineManufacturer"
                    android:layout_margin="10dp"
                    android:text="Pfizer inc" />

            </TableRow>

            <Button
                android:id="@+id/add_NewBatchButton"
                android:layout_margin="10dp"
                android:text="Record">

            </Button>

        </TableLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include layout="@layout/admin_menu_drawer" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>