<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordNewBatch">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/menu_toolbar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Record New Vaccine Batch"
            android:textColor="#1E90FF"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-medium"
            android:text="*Select a vaccine ID to record new batch"
            android:layout_marginLeft="10dp"
            android:textSize="15dp" />

        <!-- dropdown a list of vaccines -->
        <Spinner
            android:id="@+id/spinner_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp" />

        <!-- vaccine details table -->
        <TableLayout
            android:id="@+id/table_layout_vaccine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="10dp"
            android:background="#f1f1f1"
            android:visibility="invisible">

            <!-- vaccine table label -->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Vaccine ID"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Vaccine Name"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Manufacturer"
                    android:textStyle="bold" />
            </TableRow>

            <!-- details of vaccine -->
            <TableRow>

                <TextView
                    android:id="@+id/batch_vaccineID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="V110"
                    android:background="#ffffff"
                    android:layout_marginBottom="1dp"
                    android:layout_marginHorizontal="1dp"
                    />

                <TextView
                    android:id="@+id/batch_vaccineName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Pfizer"
                    android:background="#ffffff"
                    android:layout_marginBottom="1dp"
                    android:layout_marginHorizontal="1dp"/>

                <TextView
                    android:id="@+id/batch_vaccineManufacturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Pfizer inc"
                    android:background="#ffffff"
                    android:layout_marginBottom="1dp"
                    android:layout_marginHorizontal="1dp"/>

            </TableRow>

            <Button
                android:id="@+id/select_vaccine_button"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="120dp"
                android:text="Select">

            </Button>

        </TableLayout>

        <!-- add new batch No -->
        <LinearLayout
            android:id="@+id/new_batchNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batch No.:"
                android:textSize="17dp"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:id="@+id/edit_text_new_batchNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:hint="Enter batch no. "
                android:layout_marginLeft="3dp"/>
        </LinearLayout>

        <!-- expiry date -->
        <LinearLayout
            android:id="@+id/new_batch_expiryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry Date:"
                android:textSize="17dp"
                android:layout_marginLeft="5dp"/>

            <Button
                android:id="@+id/expirydate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="expiry date"/>

            <TextView
                android:id="@+id/display_expirydate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry Date:"
                android:textSize="17dp"
                android:layout_marginLeft="5dp"/>

<!--            <EditText-->
<!--                android:id="@+id/edit_text_batch_expiryDate"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textSize="17dp"-->
<!--                android:hint="Enter expiry date. "-->
<!--                android:layout_marginLeft="3dp"/>-->
        </LinearLayout>

        <!-- quantity available -->
        <LinearLayout
            android:id="@+id/new_batch_quantityAvailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity Available:"
                android:textSize="17dp"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:id="@+id/edit_text_batch_quantityAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:hint="Enter quantity of batch. "
                android:layout_marginLeft="3dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/record_button"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="20dp"
            android:text="Record"/>

    </LinearLayout>




    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include layout="@layout/admin_menu_drawer" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>