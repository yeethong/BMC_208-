<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AdminSignupActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginBottom="50sp"
            android:src="@drawable/logo" />

    <!--Sign Up text-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-medium"
        android:text="Sign Up As Admin"
        android:textSize="30sp" />

    <!-- dropdown a list of centre -->
    <Spinner
        android:id="@+id/spinner_adminCentre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp" />


    <!-- show centre name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Centre Name:"
            android:textSize="17dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/text_view_centre_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <!-- show centre address -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Centre Address:"
            android:textSize="17dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/text_view_centre_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>




    <!-- Username -->
    <EditText
        android:id="@+id/edit_text_signup_admin_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter username"
        android:layout_marginTop="16dp" />

    <!-- Password-->
    <EditText
        android:id="@+id/edit_text_signup_admin_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Enter password" />

    <!-- Email -->
    <EditText
        android:id="@+id/edit_text_signup_admin_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Enter email" />

    <!-- Full name -->
    <EditText
        android:id="@+id/edit_text_signup_admin_fullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Enter full name" />

    <!-- staff ID -->
    <EditText
        android:id="@+id/edit_text_signup_admin_staffID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Enter Staff ID" />

    <!--Sign Up button-->
    <Button
        android:id="@+id/button_admin_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="signUpButtonOnClick"
        android:text="Sign Up" />

    <TextView
        android:id="@+id/text_view_admin_addNewCentre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-light"
        android:text="Add new centre"
        android:textColor="#0000ff"
        android:textSize="16sp"
        android:textStyle="bold"/>

</LinearLayout>

</ScrollView>